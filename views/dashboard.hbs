<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>{{#if isLoggedIn}}Dashboard | {{user.username}}{{else}}Welcome to Dashboard{{/if}}</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="{{#if isLoggedIn}}bg-gray-100{{else}}bg-gradient-to-br from-blue-100 via-purple-100 to-pink-100{{/if}} min-h-screen font-sans">

  {{#if isLoggedIn}}
    <!-- Logged-in Layout -->
    <div class="flex min-h-screen">
      <!-- Sidebar -->
      <aside class="w-64 bg-white shadow-md">
        <div class="p-6">
          <h1 class="text-2xl font-bold text-gray-800">My Dashboard</h1>
        </div>
        <nav class="mt-8">
          <a href="/dashboard" class="block px-6 py-2 text-gray-700 hover:bg-gray-100">ðŸ“Š Overview</a>
          <a href="/portfolio" class="block px-6 py-2 text-gray-700 hover:bg-gray-100">ðŸ§³ Portfolio</a>
          <a href="/auth/user" class="block px-6 py-2 text-gray-700 hover:bg-gray-100">ðŸ‘¤ Profile</a>
          <a href="/auth/logout" class="block px-6 py-2 text-red-600 hover:bg-red-50">ðŸšª Logout</a>
        </nav>
      </aside>

      <!-- Main content -->
      <main class="flex-1 p-10">
        <div class="mb-10">
          <h2 class="text-4xl font-semibold text-gray-800 mb-2">Welcome, {{user.username}}</h2>
          <p class="text-gray-500">Employee ID: <span class="font-bold">{{user.employee_id}}</span></p>
        </div>

        <!-- Info Cards -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-8">
          <div class="bg-white p-6 rounded-lg shadow-md">
            <h3 class="text-sm text-gray-500">Balance</h3>
            <p class="text-2xl font-bold text-green-600">$1,200</p>
            <div class="mt-3 h-20 bg-gray-100 rounded"></div>
          </div>
          <div class="bg-white p-6 rounded-lg shadow-md">
            <h3 class="text-sm text-gray-500">Revenue</h3>
            <p class="text-2xl font-bold text-blue-600">$955</p>
            <div class="mt-3 h-20 bg-gray-100 rounded"></div>
          </div>
          <div class="bg-white p-6 rounded-lg shadow-md">
            <h3 class="text-sm text-gray-500">Growth</h3>
            <p class="text-2xl font-bold text-red-600">+12.5%</p>
            <div class="mt-3 h-20 bg-gray-100 rounded"></div>
          </div>
        </div>

        <!-- Chart Sections -->
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
          <div class="bg-white p-6 rounded-lg shadow-md h-64">
            <h4 class="text-lg font-semibold text-gray-700 mb-4">Performance</h4>
            <div class="h-full bg-gray-100 rounded"></div>
          </div>
          <div class="bg-white p-6 rounded-lg shadow-md h-64">
            <h4 class="text-lg font-semibold text-gray-700 mb-4">User Stats</h4>
            <div class="h-full bg-gray-100 rounded"></div>
          </div>
        </div>
      </main>
    </div>
  
  {{else}}
    <!-- Guest Layout -->
    <header class="flex justify-between items-center p-6 bg-white shadow-md sticky top-0 z-10">
      <div class="text-xl font-bold text-blue-800">My Dashboard</div>
      <div>
        <a href="/login" class="bg-blue-600 text-white px-4 py-2 rounded-full hover:bg-blue-700 transition">Login</a>
      </div>
    </header>

    <main class="flex flex-col justify-center items-center px-6 py-20">
      <div class="bg-white shadow-lg rounded-2xl p-10 text-center max-w-xl w-full animate-fade-in">
        <h1 class="text-4xl font-bold text-blue-700 mb-4">Welcome Guest!</h1>
        <p class="text-lg text-gray-600 mb-6">
          Please <a href="/login" class="text-blue-600 font-semibold hover:underline">log in</a> to access your portfolio.
        </p>
      </div>
    </main>

    <style>
      .animate-fade-in {
        animation: fadeIn 0.8s ease-out forwards;
      }
      @keyframes fadeIn {
        from { opacity: 0; transform: translateY(20px); }
        to { opacity: 1; transform: translateY(0); }
      }
    </style>
  {{/if}}

</body>
</html>
